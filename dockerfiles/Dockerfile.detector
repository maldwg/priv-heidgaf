FROM python:3

WORKDIR /usr/src/app

COPY requirements.detector.txt ./
RUN pip --disable-pip-version-check install --no-cache-dir --no-compile  -r requirements.detector.txt

COPY heidgaf_core ./heidgaf_core
COPY heidgaf_analyzation ./heidgaf_analyzation
COPY config.yaml .

CMD [ "python", "heidgaf_analyzation/analyzer.py"]
